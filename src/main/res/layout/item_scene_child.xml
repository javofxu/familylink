<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/margin_72"
    android:layout_margin="@dimen/margin_10"
    android:gravity="center"
    android:id="@+id/scene_child_bg"
    android:background="@drawable/round_corner_bg">

    <ImageView
        android:id="@+id/scene_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15"
        android:src="@mipmap/scene_at_home"/>

    <com.example.common.view.CustomTextView
        android:id="@+id/scene_child_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_15"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_16"
        android:text="@string/home_mode"/>

    <ImageView
        android:id="@+id/scene_child_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20"
        android:src="@drawable/ic_more_vert_black_24dp"/>
</LinearLayout>