<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/ali_share_list"/>

            <ImageView
                android:id="@+id/iv_share_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.example.common.view.refresh.CustomRefreshView
                android:id="@+id/share_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </com.example.common.view.refresh.CustomRefreshView>
            <TextView
                android:id="@+id/tv_share_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:text="@string/add_sharer"
                android:gravity="center"
                android:background="@color/main_color"/>
        </LinearLayout>
    </LinearLayout>
</layout>