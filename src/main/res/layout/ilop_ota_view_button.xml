<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_button_ota_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_48"
    android:background="@drawable/btn_click_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_button_ota_progress"
            android:visibility="visible"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:background="@drawable/icon_ota_progress" />

        <TextView
            android:id="@+id/mine_button_ota_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mine_color_FFFFFF"
            android:textStyle="bold"
            android:text="@string/wait"
            android:layout_marginStart="@dimen/margin_10"/>
    </LinearLayout>
</RelativeLayout>