<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_item_selector">
    <RelativeLayout
        android:id="@+id/rl_push_result_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_72">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_15"
            android:scaleType="fitCenter"
            android:src="@mipmap/head_default" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/gateway"
            android:textColor="@color/text_title"
            android:layout_toEndOf="@id/iv_image"
            android:layout_alignTop="@id/iv_image"
            android:layout_marginStart="@dimen/margin_12"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/gateway"
            android:textColor="@color/num_color"
            android:layout_toEndOf="@id/iv_image"
            android:textSize="@dimen/text_12"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_alignBottom="@id/iv_image" />


        <TextView
            android:layout_width="@dimen/margin_55"
            android:layout_height="@dimen/margin_32"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/main_color"
            android:text="@string/delete"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_15"
            android:background="@drawable/btn_empty_bg"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/top_bar_line"/>
</LinearLayout>
