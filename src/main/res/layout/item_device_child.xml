<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_item_selector">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/line_bg"/>
    <RelativeLayout
        android:id="@+id/child_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/SmallPadding">

        <ImageView
            android:id="@+id/child_icon"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_30"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_score" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/child_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="VideoMotion"
                android:textColor="@color/text_color_selected"
                android:layout_marginStart="@dimen/NormalPadding"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/child_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="20:23:21"
                android:textColor="@color/num_color"
                android:textSize="@dimen/text_12"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/NormalPadding" />

        </LinearLayout>

        <ImageView
            android:id="@+id/child_socket"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_switch_on"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_marginEnd="@dimen/NormalPadding" />
    </RelativeLayout>
</LinearLayout>
