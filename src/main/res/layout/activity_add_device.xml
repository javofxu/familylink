<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/color_white">

        <TextView
            style="@style/TabTitleTextView"
            android:text="@string/add_equipment"/>

        <ImageView
            android:id="@+id/iv_add_device_back"
            style="@style/TabBackImageView"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/top_bar_line" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_add_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_add_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">
            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>
