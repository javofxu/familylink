<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/configure_device"/>

            <ImageView
                android:id="@+id/iv_gateway_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_ground">
            <ScrollView
                android:id="@+id/sl_has_gateway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_48"
                        android:layout_marginTop="@dimen/margin_15"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_15"
                            android:ems="6"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/text_title"
                            android:text="@string/ali_gateway_name"/>
                        <EditText
                            android:id="@+id/et_device_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/text_16"
                            android:maxLength="15"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:hint="@string/ali_rename_device_name"
                            android:background="@null"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1"
                        android:background="@color/line_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_48"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_15"
                            android:ems="6"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/text_title"
                            android:text="@string/room_name"/>
                        <EditText
                            android:id="@+id/et_room_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/text_16"
                            android:maxLength="15"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:hint="@string/ali_rename_room_name"
                            android:background="@null"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/choose_room_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                    </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_15"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/text_normal"
                        android:text="@string/please_choose_device"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/choose_gateway_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/config_device_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_24"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginEnd="@dimen/margin_15"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/btn_gradient_bg"
                            android:textSize="@dimen/text_18"
                            android:textColor="@color/white"
                            android:text="@string/next"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/ll_no_gateway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_add_gateway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/device_empty_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_title"
                    android:textSize="@dimen/text_16"
                    android:text="@string/ali_no_gateway"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>