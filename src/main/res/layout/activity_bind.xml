<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/net_configuration"/>

            <ImageView
                android:id="@+id/iv_bind_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.example.common.view.tick.TickView
                    android:id="@+id/tv_tick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:check_base_color="@color/main_color"
                    app:radius="@dimen/margin_80"
                    app:tick_radius="@dimen/margin_48"
                    app:tick_radius_set="@dimen/margin_15"
                    app:rate="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_20"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/text_title"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/ali_device_has_connected_to_wifi"/>

                <LinearLayout
                    android:id="@+id/show_been_bind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_margin="@dimen/margin_20"
                    android:visibility="invisible"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/initialzation_guidance_mention1"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/text_title"/>
                    <Button
                        android:id="@+id/tv_to_how"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_empty_bg"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/main_color"
                        android:text="@string/initialzation_guidance_mention2"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
