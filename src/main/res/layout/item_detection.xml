<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/margin_15"
    android:layout_marginEnd="@dimen/margin_15"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_detection_icon"
            android:layout_width="@dimen/margin_36"
            android:layout_height="@dimen/margin_36"
            android:src="@mipmap/intelligent_system"/>

        <com.example.common.view.CustomTextView
            android:id="@+id/item_detection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_home_btn_marginTop"
            android:textSize="@dimen/title_size_edit"
            android:textColor="@color/text_title"
            android:text="@string/ali_alarm_product"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_detection_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>