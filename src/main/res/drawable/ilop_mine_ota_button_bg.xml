<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_activated="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="27dp" />
            <solid android:color="@color/text_color_selected" />
            <size android:width="327dp" android:height="54dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_activated="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="27dp" />
            <solid android:color="@color/dark_blue" />
            <size android:width="327dp" android:height="54dp" />
        </shape>
    </item>

    <item android:state_activated="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="27dp" />
            <solid android:color="@color/dark_blue" />
            <size android:width="327dp" android:height="54dp" />
        </shape>
    </item>
</selector>
