<?xml version="1.0" encoding="utf-8"?>

                                                        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/activity_device_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/ali_gateway_detail"/>

            <ImageView
                android:id="@+id/iv_status_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/main_ground">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ilop.sthome.view.SettingItem
                    android:id="@+id/si_iot_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType = "none"
                    app:item_showDivider="true"
                    app:item_detailText=""
                    app:item_titleText="@string/ali_iotid" />
                <com.ilop.sthome.view.SettingItem
                    android:id="@+id/si_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType = "none"
                    app:item_showDivider="false"
                    app:item_detailText=""
                    app:item_titleText="@string/ali_deviceName" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
         
