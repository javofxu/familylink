<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:layout_margin="@dimen/SmallPadding">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:minHeight="@dimen/SmallListHeight"
            android:paddingStart="@dimen/NormalPadding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    style="@style/CCPFontPreferenceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:textColor="@color/delist_bk"
                    android:text="@string/videos"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:orientation="vertical">
                <SeekBar
                    android:id="@+id/setupRecordPreSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progress="0"
                    android:maxHeight="@dimen/margin_05"
                    android:minHeight="@dimen/margin_05"
                    android:thumb="@drawable/item_seek_bar"
                    android:progressDrawable="@drawable/video_control_seekbar_bg"
                    android:visibility="visible"/>
            </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/summary"
                style="@style/CCPFontPreferenceSummary"
                android:paddingBottom="@dimen/SmallPadding"
                android:paddingRight="@dimen/SmallPadding"
                android:paddingTop="@dimen/SmallPadding"
                android:singleLine="true"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/toast_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="online"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/NormalPadding" />
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/margin_58"
                android:layout_height="@dimen/margin_24"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_switch_check_ipc"
                android:button="@null"
                android:checked="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_20"
                android:visibility="visible"/>
            <Spinner
                android:id="@+id/spinnerCameraDefinition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@mipmap/icon_spinner" />
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
        <TextView
            android:id="@+id/sub_title"
            style="@style/CCPFontPreferenceLarge"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="@string/videos"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:textColor="@color/toast_text_content"
            android:textSize="@dimen/SmallTextSize"
            android:maxWidth="270dp"
            android:singleLine="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:focusable="true" />
        <View
            android:id="@+id/item_bottom_divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/margin_2"
            android:background="@color/list_divider"/>
</LinearLayout>