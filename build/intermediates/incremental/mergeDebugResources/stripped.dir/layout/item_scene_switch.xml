<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10">

    <LinearLayout
        android:layout_width="@dimen/margin_120"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/src_img"
            android:layout_width="@dimen/modle_del_ico_width"
            android:layout_height="@dimen/modle_del_ico_width"
            android:src="@mipmap/icon_home_online"/>
        <TextView
            android:id="@+id/src_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_05"
            android:text="@string/home_mode"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_next"/>
    <LinearLayout
        android:layout_width="@dimen/margin_120"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/des_img"
            android:layout_width="@dimen/modle_del_ico_width"
            android:layout_height="@dimen/modle_del_ico_width"
            android:src="@mipmap/icon_leave_online"/>
        <TextView
            android:id="@+id/des_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_05"
            android:text="@string/out_mode"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>