<?xml version="1.0" encoding="utf-8"?>
                                                                   
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/activity_detail_alarm_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <ImageView
                android:id="@+id/go_back"
                android:onClick="finish"
                style="@style/TabBackImageView"/>

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/device"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15">

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="@dimen/margin_72"
                android:layout_height="@dimen/margin_72"
                android:src="@mipmap/gs188"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <com.example.common.view.CustomTextView
                        android:id="@+id/detail_name"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_16"
                        android:text="@string/ali_gateway"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="-1"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_15"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/signalPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/signal4"/>
                        <ImageView
                            android:id="@+id/quantityPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_25"
                            android:src="@mipmap/battery5"/>
                        <TextView
                            android:id="@+id/quantity_desc"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_50"
                            android:layout_marginStart="@dimen/margin_4"
                            android:textColor="@color/text_line"
                            android:textSize="@dimen/text_12"
                            android:text="100%"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/detail_layout"
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_10"
                        android:background="@drawable/device_status_normal"/>

                    <TextView
                        android:id="@+id/showStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/margin_08"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_14"
                        android:text="@string/normal"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:layout_marginStart="@dimen/margin_100"
                android:background="@color/line_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_66"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/operation"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_32"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_15"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"
                    android:text="@string/test"
                    android:background="@drawable/btn_gradient_bg"/>
                <Button
                    android:id="@+id/silence"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_32"
                    android:layout_toStartOf="@+id/operation"
                    android:layout_marginEnd="@dimen/margin_12"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/main_color"
                    android:text="@string/silence"
                    android:background="@drawable/btn_empty_bg"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_ground">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/line_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_08"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/detail_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="history"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_history_sel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/ali_history_log"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_details_sel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/ali_detail"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="manager"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_setting_sel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/center_setting"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
         