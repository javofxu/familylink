<?xml version="1.0" encoding="utf-8"?>
                                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white" android:tag="layout/activity_set_double_switch_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">
            <TextView
                android:id="@+id/tv_set_title"
                style="@style/TabTitleTextView"
                android:text="@string/set_action"/>
            <ImageView
                android:id="@+id/iv_back"
                style="@style/TabBackImageView"/>
            <TextView
                android:id="@+id/tv_save_switch"
                style="@style/TabDoTextView"
                android:text="@string/save"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/main_ground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/switch_is_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_48"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_15"
                        android:textColor="@color/text_line"
                        android:textSize="@dimen/text_14"
                        android:text="@string/set_delay"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_150"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_25"
                        android:paddingEnd="@dimen/margin_25"
                        android:orientation="horizontal"
                        android:background="@color/white">

                        <com.ilop.sthome.view.WheelView
                            android:id="@+id/action_minute"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_18"
                            android:textStyle="bold"
                            android:text=":"/>

                        <com.ilop.sthome.view.WheelView
                            android:id="@+id/action_second"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_set_action"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_15"
                    android:textColor="@color/text_line"
                    android:textSize="@dimen/text_14"
                    android:text="@string/trigger_style"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_150"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <com.ilop.sthome.view.WheelView
                        android:id="@+id/item_dual_device"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <com.ilop.sthome.view.WheelView
                        android:id="@+id/item_dual_device2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         