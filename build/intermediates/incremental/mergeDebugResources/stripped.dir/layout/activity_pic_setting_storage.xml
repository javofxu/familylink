<?xml version="1.0" encoding="utf-8"?>
                                                                   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical" android:tag="layout/activity_pic_setting_storage_0" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_setup_storage"
            android:textColor="#FFF"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/iv_storage_back"
            android:layout_width="@dimen/back_image_width"
            android:layout_height="@dimen/back_image_height"
            android:padding="@dimen/margin_3"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/back_image_marginLeft"
            android:src="@mipmap/back_white"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:paddingTop="@dimen/LargePadding"
                android:paddingBottom="@dimen/LargePadding">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/circle_storage_bg"
                    android:layout_centerInParent="true">
                    <com.ilop.sthome.view.CustomWavesView
                        android:id="@+id/porter_duff_view"
                        android:layout_width="@dimen/margin_180"
                        android:layout_height="@dimen/margin_180"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_42"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_15"
                android:background="@drawable/round_corner_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:padding="@dimen/margin_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:layout_marginStart="@dimen/margin_10"
                        android:src="@mipmap/icon_storage_point"/>
                    <TextView
                        style="@style/CCPFontPreferenceLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/device_setup_storage_capacity"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textColor="@color/delist_bk"/>
                    <TextView
                        android:id="@+id/storage_has"
                        style="@style/CCPFontPreferenceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:textColor="@color/delist_bk"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@color/list_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:layout_marginStart="@dimen/margin_10"
                        android:src="@mipmap/icon_storage_point"/>
                    <TextView
                        style="@style/CCPFontPreferenceLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/device_setup_storage_remain"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textColor="@color/delist_bk"/>
                    <TextView
                        android:id="@+id/storage_remain"
                        style="@style/CCPFontPreferenceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:textColor="@color/delist_bk"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@color/list_divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/margin_32"
                        android:layout_height="@dimen/margin_32"
                        android:layout_marginStart="@dimen/margin_10"
                        android:src="@mipmap/icon_storage_video"/>
                    <TextView
                        style="@style/CCPFontPreferenceLarge"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/device_setup_storage_record_full"
                        android:layout_marginStart="@dimen/margin_10"
                        android:textColor="@color/delist_bk"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/stoprecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_setup_storage_record_stop"
                            android:textColor="@color/delist_bk"
                            android:drawableStart="@drawable/radion_bg_ipc"
                            android:drawablePadding="@dimen/margin_2"/>

                        <RadioButton
                            android:id="@+id/cyclerecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_05"
                            android:text="@string/device_setup_storage_record_cycle"
                            android:drawableStart="@drawable/radion_bg_ipc"
                            android:drawablePadding="@dimen/margin_2"
                            android:textColor="@color/delist_bk" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnStorageFormat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_58"
                android:layout_margin="@dimen/margin_20"
                android:background="@mipmap/loginout_bg"
                android:gravity="center"
                android:text="@string/device_setup_storage_format"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
         