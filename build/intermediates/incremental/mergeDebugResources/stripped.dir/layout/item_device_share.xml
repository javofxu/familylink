<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector">
    <RelativeLayout
        android:id="@+id/rl_push_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/SmallPadding">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/gs156" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="VideoMotion"
            android:textColor="@color/text_color_selected"
            android:layout_toRightOf="@id/iv_image"
            android:layout_alignTop="@id/iv_image"
            android:layout_marginLeft="@dimen/NormalPadding"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="20:23:21"
            android:textColor="@color/num_color"
            android:layout_toRightOf="@id/iv_image"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/NormalPadding"
            android:layout_alignBottom="@id/iv_image" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="已授权"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/NormalPadding"/>

    </RelativeLayout>
</RelativeLayout>
