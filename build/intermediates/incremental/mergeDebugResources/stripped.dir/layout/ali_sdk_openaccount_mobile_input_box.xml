<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:minWidth="50dp"
        android:textColor="#cccccc"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/edt_chosed_country_num_sub"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxLength="5"
        android:paddingLeft="10dp"
        android:text="@string/ali_sdk_openaccount_text_mobile_country_code_subfix"
        android:textColor="#767676"
        android:textSize="14dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/edt_chosed_country_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/edt_chosed_country_num_sub"
        android:gravity="center"
        android:maxLength="5"
        android:paddingRight="1dp"
        android:text="@string/ali_sdk_openaccount_text_mobile_country_default_code"
        android:textColor="#767676"
        android:textSize="14dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/country_choose_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/edt_chosed_country_num"
        android:paddingRight="12dp"
        android:src="@drawable/openaccount_arrowdown_normal"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/splite_single_line"
        android:layout_width="1px"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/country_choose_btn"
        android:background="@drawable/openaccount_account_input_line"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@null"
        android:singleLine="true"
        android:textColor="@color/ali_sdk_openaccount_text_input"
        android:textColorHint="@color/ali_sdk_openaccount_text_hint"
        android:textCursorDrawable="@null"
        android:textSize="17sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:minWidth="50dp"
        android:text="@string/ali_sdk_openaccount_icon_clear"
        android:textSize="20sp" />

</merge>