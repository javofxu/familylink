<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/fragment_sub_device_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <com.example.common.view.refresh.CustomRefreshView
            android:id="@+id/sub_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_10">
        </com.example.common.view.refresh.CustomRefreshView>
        <LinearLayout
            android:id="@+id/ll_add_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_line_margin"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_48"
                android:layout_height="@dimen/margin_48"
                android:background="@mipmap/icon_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/add_equipment"/>
        </LinearLayout>
    </LinearLayout>
         