<?xml version="1.0" encoding="utf-8"?>

                                                        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/activity_pic_setting_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting"
                android:textColor="@color/top_bar_title"
                android:textSize="@dimen/title_size" />

            <ImageView
                android:id="@+id/iv_setting_back"
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:padding="@dimen/margin_3"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/back_image_marginLeft"
                android:src="@mipmap/back"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line_bg"
            android:orientation="vertical">
            <com.ilop.sthome.view.SettingItem
                android:id="@+id/common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_accessoryType="arrow"
                app:item_showDivider="false"
                app:item_titleText="@string/common_setting" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_bg"/>
            <com.ilop.sthome.view.SettingItem
                android:id="@+id/codesetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_accessoryType="arrow"
                app:item_showDivider="false"
                app:item_titleText="@string/device_setup_change_password" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_bg"/>
            <com.ilop.sthome.view.SettingItem
                android:id="@+id/storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_accessoryType="arrow"
                app:item_showDivider="false"
                app:item_titleText="@string/device_setup_storage" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_bg"/>
            <com.ilop.sthome.view.SettingItem
                android:id="@+id/expertsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_accessoryType="arrow"
                app:item_showDivider="false"
                app:item_titleText="@string/device_setup_expert" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_bg"/>
            <com.ilop.sthome.view.SettingItem
                android:id="@+id/tongyong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_accessoryType="arrow"
                app:item_showDivider="false"
                app:item_titleText="@string/common" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/line_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/tuichu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_58"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginEnd="@dimen/margin_15"
                    android:layout_centerInParent="true"
                    android:text="@string/delete_equipment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/NormalTextSize"
                    android:background="@mipmap/loginout_bg"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
         