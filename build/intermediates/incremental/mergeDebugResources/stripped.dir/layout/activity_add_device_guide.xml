<?xml version="1.0" encoding="utf-8"?>

                                                        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/activity_add_device_guide_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                android:id="@+id/tv_add_sub_title"
                style="@style/TabTitleTextView"
                android:text="@string/add_equipment"/>

            <ImageView
                android:id="@+id/iv_sub_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_config_guide"
                android:layout_width="@dimen/margin_260"
                android:layout_height="@dimen/margin_260"
                android:layout_margin="@dimen/margin_20"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_40"
                android:src="@drawable/config_button"/>

            <com.example.common.view.AutoSplitTextView
                android:id="@+id/guideText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_58"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_15"
                app:text_Color="@color/text_title"
                app:text_Size="@dimen/text_16"
                app:text="@string/add_device_hint"/>

            <com.example.common.view.AutoSplitTextView
                android:id="@+id/guideText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                app:text_Color="@color/text_title"
                app:text_Size="@dimen/text_16"
                app:text=" "/>
        </LinearLayout>
    </LinearLayout>
         