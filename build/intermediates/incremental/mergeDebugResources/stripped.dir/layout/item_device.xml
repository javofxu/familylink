<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/round_corner_bg">

    <com.example.common.view.CustomTextView
        android:id="@+id/item_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_16"
        android:text="@string/gateway"/>
    <TextView
        android:id="@+id/item_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_2"
        android:text="@string/gateway"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_05"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_device_icon"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_margin="@dimen/margin_05"
            android:src="@mipmap/gs156"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_10"
            android:orientation="horizontal">
            <View
                android:id="@+id/item_device_color"
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_10"
                android:background="@drawable/round_corner_color"/>
            <TextView
                android:id="@+id/item_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_05"
                android:ems="3"
                android:gravity="center"
                android:text="@string/normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>