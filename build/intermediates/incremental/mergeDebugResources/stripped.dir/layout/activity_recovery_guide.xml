<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                              
                                                          

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white" android:tag="layout/activity_recovery_guide_0" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" tools:keep="@layout/activity_initialization_guidance">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/initialzation_guidance_mention2"/>

            <ImageView
                android:id="@+id/iv_initialzation_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_15">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="230dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_40"/>

                <com.example.common.view.AutoSplitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    app:text_Size="@dimen/text_16"
                    app:text="@string/initialzation_guidance_text1"
                    app:text_Color="@color/text_title"/>

                <com.example.common.view.AutoSplitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    app:text="@string/initialzation_guidance_text2"
                    app:text_Color="@color/text_title"
                    app:text_Size="@dimen/text_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/btn_gradient_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:text="@string/initialzation_guidance_button" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         