<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/alisdk_openaccount_login_qr_title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ali_sdk_openaccount_qr_login_title_corner">

            <TextView
                android:id="@+id/alisdk_openaccount_login_qr_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:text="@string/ali_sdk_openaccount_icon_qr_text"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/alisdk_openaccount_login_qr_text_view"
                android:layout_toRightOf="@id/alisdk_openaccount_login_qr_text_view"
                android:text="@string/ali_sdk_openaccount_text_qr_login_title_bar"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/alisdk_openaccount_qr_login_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:text="@string/ali_sdk_openaccount_icon_qr_close"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8">

            <com.alibaba.sdk.android.openaccount.ui.ui.LoginWebViewWidget
                android:id="@+id/alisdk_openaccount_login_web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>