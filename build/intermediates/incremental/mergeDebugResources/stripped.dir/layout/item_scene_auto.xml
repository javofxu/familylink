<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click"
    android:orientation="vertical">
    <TextView
        android:id="@+id/wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_12"
        android:paddingStart="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_15"
        android:textSize="@dimen/text_16"
        android:textColor="@color/text_title"
        android:text="@string/my_scene" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/margin_58">

        <RelativeLayout
            android:id="@+id/diyigetu"
            android:layout_width="@dimen/margin_36"
            android:layout_height="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/input1"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:src="@mipmap/gs156" />

            <ImageView
                android:id="@+id/input2"
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_05"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_more"/>

        </RelativeLayout>


        <ImageView
            android:src="@mipmap/icon_and"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/diyigetu"
            android:layout_marginStart="@dimen/margin_12"
            android:id="@+id/link"/>

        <ImageView
            android:id="@+id/output1"
            android:layout_width="@dimen/margin_32"
            android:layout_height="@dimen/margin_32"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/link"
            android:layout_marginStart="@dimen/margin_12"
            android:src="@mipmap/gs156"/>

        <ImageView
            android:id="@+id/output2"
            android:layout_width="@dimen/margin_32"
            android:layout_height="@dimen/margin_32"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/output1"
            android:layout_marginStart="@dimen/margin_12"
            android:src="@mipmap/gs156"/>

        <RelativeLayout
            android:layout_width="@dimen/margin_36"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/output2"
            android:layout_marginStart="@dimen/margin_12">

            <ImageView
                android:id="@+id/output3"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:src="@mipmap/gs156"/>

            <ImageView
                android:id="@+id/output4"
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_05"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/icon_more"/>

        </RelativeLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_32"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:textColor="@color/white"
            android:text="@string/done"
            android:background="@drawable/round_state_bg"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_10"
        android:background="@color/line_bg"/>
</LinearLayout>