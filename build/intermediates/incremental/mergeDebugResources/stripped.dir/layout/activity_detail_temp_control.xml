<?xml version="1.0" encoding="utf-8"?>

                                                        
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white" android:tag="layout/activity_detail_temp_control_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50">

        <ImageView
            android:onClick="finish"
            style="@style/TabBackImageView"/>

        <TextView
            android:id="@+id/detail_name"
            style="@style/TabTitleTextView"
            android:text="@string/temp_controler"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/top_bar_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_18"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/signalPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/signal4"/>
        <ImageView
            android:id="@+id/quantityPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_25"
            android:src="@mipmap/battery5"/>
        <TextView
            android:id="@+id/quantity_desc"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:textColor="@color/text_line"
            android:textSize="@dimen/text_12"
            android:text="100%"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">
            <View
                android:id="@+id/root"
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_10"
                android:background="@drawable/device_status_normal"/>
            <TextView
                android:id="@+id/showStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_08"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_14"
                android:text="@string/normal"/>
        </LinearLayout>
    </LinearLayout>


       <com.ilop.sthome.view.ColorArcProgressBar
           android:id="@+id/setting_temp"
           android:layout_width="@dimen/margin_280"
           android:layout_height="@dimen/margin_280"
           app:bg_arc_color="#f1f5f8"
           app:bg_arc_width="10dp"
           app:start_color="#4C80F8"
           app:end_color="#6CC6FF"
           app:front_width="@dimen/margin_12"
           app:max_value="30"
           app:sweep_angle="270"
           app:is_seek_enable="true"
           app:string_title="@string/setting_temperature"
           app:string_unit="@string/current_temperature"/>

    <TextView
        android:id="@+id/btnConfirm"
        android:gravity="center"
        android:text="@string/save"
        android:textSize="@dimen/text_16"
        android:background="@drawable/btn_eq_detail"
        android:layout_margin="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_marginBottom="@dimen/BigPadding"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80">
        <ImageView
            android:id="@+id/timer_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_50"
            android:src="@mipmap/timing_nor" />
        <ImageView
            android:id="@+id/handle_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/manual_nor" />
        <ImageView
            android:id="@+id/fangdong_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_50"
            android:src="@mipmap/freeze_nor" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:background="@color/view_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_120">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_55">
            <ImageView
                android:id="@+id/valve_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/valve_enable"/>
            <CheckBox
                android:id="@+id/valve_check"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/icon_switch_check_ipc"
                android:button="@null"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/tongsuo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lock_enable"/>
            <CheckBox
                android:id="@+id/tongsuo_btn"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/icon_switch_check_ipc"
                android:button="@null"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_55">
            <ImageView
                android:id="@+id/window_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/window_enable"/>
            <CheckBox
                android:id="@+id/window_check"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/icon_switch_check_ipc"
                android:button="@null"
                android:checked="false" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/line_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_08"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/detail_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="history"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_history_sel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_12"
                android:text="@string/ali_history_log"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_details_sel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_12"
                android:text="@string/ali_detail"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="manager"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_setting_sel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_12"
                android:text="@string/center_setting"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
         