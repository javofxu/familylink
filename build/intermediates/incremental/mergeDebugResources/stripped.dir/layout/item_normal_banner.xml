<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/normal_banner_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="@dimen/margin_58"
        android:layout_height="@dimen/margin_58"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_play"/>
    <LinearLayout
        android:id="@+id/normal_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_05"
        android:background="@color/top_bar_title"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/page_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10"
            android:text="@string/options"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>