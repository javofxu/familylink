<?xml version="1.0" encoding="utf-8"?>
                                                                   
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white" android:tag="layout/activity_pic_setting_info_0" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/common"
            android:textColor="@color/top_bar_title"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/iv_common_back"
            android:layout_width="@dimen/back_image_width"
            android:layout_height="@dimen/back_image_height"
            android:padding="@dimen/margin_3"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/back_image_marginLeft"
            android:src="@mipmap/back"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/top_bar_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_bg"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgDeviceQRCode"
                android:layout_width="@dimen/margin_160"
                android:layout_height="@dimen/margin_160"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:paddingLeft="@dimen/SmallPadding"
                android:paddingRight="@dimen/SmallPadding"
                android:background="@color/btn_item">
                <TextView
                    style="@style/CCPFontPreferenceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_system_info_sn"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/NormalPadding"
                    android:layout_centerVertical="true"
                    android:textColor="@color/delist_bk"/>
                <TextView
                    style="@style/CCPFontPreferenceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/NormalPadding"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_selected"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:paddingLeft="@dimen/SmallPadding"
                android:paddingRight="@dimen/SmallPadding"
                android:background="@color/btn_item">
                <TextView
                    style="@style/CCPFontPreferenceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_system_info_model"
                    android:layout_marginStart="@dimen/NormalPadding"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/delist_bk"/>

                <TextView
                    style="@style/CCPFontPreferenceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/type"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/NormalPadding"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_selected"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:paddingLeft="@dimen/SmallPadding"
                android:paddingRight="@dimen/SmallPadding"
                android:background="@color/btn_item"
                android:id="@+id/storage">
                <TextView
                    style="@style/CCPFontPreferenceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_system_info_nat_code"
                    android:layout_marginStart="@dimen/NormalPadding"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/delist_bk"/>

                <TextView
                    style="@style/CCPFontPreferenceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/net_type"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/NormalPadding"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_selected"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:paddingLeft="@dimen/SmallPadding"
                android:paddingRight="@dimen/SmallPadding"
                android:background="@color/btn_item"
                android:id="@+id/expertsetting">
                <TextView
                    style="@style/CCPFontPreferenceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_system_info_nat_status"
                    android:layout_marginStart="@dimen/NormalPadding"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/delist_bk"/>

                <TextView
                    style="@style/CCPFontPreferenceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/net_status"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/NormalPadding"
                    android:textColor="@color/text_color_selected"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>
            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_58"
                android:layout_marginTop="@dimen/margin_58"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:text="@string/reset_to_default_set"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:background="@mipmap/loginout_bg"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
         