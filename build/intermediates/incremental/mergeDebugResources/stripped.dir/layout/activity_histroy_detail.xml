<?xml version="1.0" encoding="utf-8"?>
                                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal" android:tag="layout/activity_histroy_detail_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/ali_history_log"/>

            <ImageView
                android:id="@+id/iv_history_back"
                style="@style/TabBackImageView"/>

            <TextView
                android:id="@+id/clear"
                style="@style/TabDoTextView"
                android:text="@string/delete"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line"/>
        <com.example.common.view.refresh.CustomRefreshView
            android:id="@+id/rv_history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_ground">
        </com.example.common.view.refresh.CustomRefreshView>
    </LinearLayout>
         