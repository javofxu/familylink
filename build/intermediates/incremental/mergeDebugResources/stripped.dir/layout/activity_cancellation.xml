<?xml version="1.0" encoding="utf-8"?>
                                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white" android:tag="layout/activity_cancellation_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50">

            <TextView
                style="@style/TabTitleTextView"
                android:text="@string/account_cancellation"/>

            <ImageView
                android:id="@+id/iv_cancel_back"
                style="@style/TabBackImageView"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/top_bar_line" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.example.common.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:textColor="@color/text_title"
                    android:textSize="@dimen/text_18"
                    android:text="@string/permanently_discontinued"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/text_14"
                        android:text="@string/account_follows"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/margin_08"
                            android:layout_height="@dimen/margin_08"
                            android:background="@drawable/radio_select_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_title"
                            android:text="@string/device_information"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/margin_08"
                            android:layout_height="@dimen/margin_08"
                            android:background="@drawable/radio_select_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_title"
                            android:text="@string/message_logs"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/margin_08"
                            android:layout_height="@dimen/margin_08"
                            android:background="@drawable/radio_select_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_title"
                            android:text="@string/account_information"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/margin_08"
                            android:layout_height="@dimen/margin_08"
                            android:background="@drawable/radio_select_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_title"
                            android:text="@string/personal_information"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/margin_08"
                            android:layout_height="@dimen/margin_08"
                            android:background="@drawable/radio_select_normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_title"
                            android:text="@string/feedback"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/cancel_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginEnd="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/white"
                    android:text="@string/ok"
                    android:background="@drawable/btn_click_bg"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         