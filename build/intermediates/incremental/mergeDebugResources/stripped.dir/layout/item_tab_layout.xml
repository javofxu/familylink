<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tab_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        android:text="@string/gateway"
        android:textColor="@color/text_title"/>
    <View
        android:id="@+id/tab_item_indicator"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_05"
        android:background="@drawable/round_horizontal_bg"
        android:visibility="visible"/>
</LinearLayout>