<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_05"
    android:background="@drawable/round_corner_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_gateway_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_12"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_16"
            android:text="@string/gateway"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_12"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_12"
            android:text="@string/ali_gateway"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/margin_48"
                android:layout_height="@dimen/margin_48"
                android:layout_margin="@dimen/margin_12"
                android:src="@mipmap/gs188"/>
            <ImageView
                android:id="@+id/iv_gateway_status"
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_gateway_status"
                android:src="@drawable/round_corner_color"/>
            <TextView
                android:id="@+id/tv_gateway_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/off_line"
                android:textColor="@color/num_color"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_gateway_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_15"
        android:src="@mipmap/unselected_48"/>
</RelativeLayout>
