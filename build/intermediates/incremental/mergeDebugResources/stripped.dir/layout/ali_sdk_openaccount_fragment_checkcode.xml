<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:user="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:inputBox="http://schemas.android.com/tools"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ali_user_phone_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />

    <Button
        android:id="@+id/ali_user_resend_checkcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ali_sdk_openaccount_text_count_down"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/ali_user_checkcode_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ali_sdk_openaccount_text_confirm"
        android:layout_gravity="center"
        />

</LinearLayout>